{
  "name": "@digitalbazaar/x25519-key-agreement-key-2020",
  "version": "2.1.1-0",
  "description": "An X25519 (Curve25519) DH (Diffie-Hellman) key implementation to work with the X25519 2020 Crypto suite.",
  "homepage": "https://github.com/digitalbazaar/x25519-key-agreement-key-2020",
  "author": {
    "name": "Digital Bazaar, Inc.",
    "email": "support@digitalbazaar.com",
    "url": "https://digitalbazaar.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalbazaar/x25519-key-agreement-key-2020"
  },
  "bugs": {
    "url": "https://github.com/digitalbazaar/x25519-key-agreement-key-2020/issues",
    "email": "support@digitalbazaar.com"
  },
  "license": "BSD-3-Clause",
  "files": [
    "lib/*.js"
  ],
  "type": "module",
  "exports": "./lib/index.js",
  "dependencies": {
    "@noble/ed25519": "^1.6.0",
    "base58-universal": "github:digitalbazaar/base58-universal#fix-esm",
    "crypto-ld": "github:digitalbazaar/crypto-ld#convert-to-module",
    "ed2curve": "^0.3.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@digitalbazaar/ed25519-verification-key-2020": "github:digitalbazaar/ed25519-verification-key-2020#convert-to-module",
    "@digitalbazaar/x25519-key-agreement-key-2019": "github:digitalbazaar/x25519-key-agreement-key-2019#convert-to-module",
    "c8": "^7.11.2",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "eslint-config-digitalbazaar": "^3.0.0",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-unicorn": "^42.0.0",
    "karma": "^6.3.19",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "mocha": "^9.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "webpack": "^5.72.0"
  },
  "c8": {
    "exclude": [
      "test"
    ],
    "reporter": [
      "html",
      "text-summary"
    ]
  },
  "browser": {
    "./lib/crypto.js": "./lib/crypto-browser.js"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "Decentralized",
    "Linked Data"
  ],
  "scripts": {
    "test": "npm run lint && npm run test-node && npm run test-karma",
    "test-node": "cross-env NODE_ENV=test mocha --preserve-symlinks -t 10000 test/*.spec.js",
    "test-karma": "karma start karma.conf.cjs",
    "coverage": "cross-env NODE_ENV=test c8 --reporter=lcov --reporter=text-summary npm run test-node",
    "coverage-ci": "cross-env NODE_ENV=test c8 --reporter=lcovonly --reporter=text npm run test-node",
    "coverage-report": "c8 report",
    "lint": "eslint ."
  }
}
